<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边缘线的宽度和颜色 -->
    <stroke
        android:width="1px"
        android:color="#69C1FC" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient
        android:angle="270"
        android:centerColor="#2092D4"
        android:endColor="#2092D4"
        android:startColor="#2092D4" />
    <!-- 设置四个角的角度 -->
    <corners
        android:bottomLeftRadius="6dp"
        android:bottomRightRadius="6dp"
        android:topLeftRadius="6dp"
        android:topRightRadius="6dp" />
    <!-- 设置padding -->
    <padding
        android:bottom="13dp"
        android:left="13dp"
        android:right="13dp"
        android:top="13dp" />

</shape>