<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="#DADADA" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530px"
        android:background="#ffffff"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crown_txt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36px"
                    android:text="2018-05-01"
                    android:textColor="#3886C6"
                    android:textSize="32px" />

                <View
                    android:id="@+id/crown_view_start"
                    android:layout_width="188px"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="6px"
                    android:background="#DADADA" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="至"
                android:textColor="#888888"
                android:textSize="38px" />

            <LinearLayout
                android:id="@+id/linearEend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crown_txt_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36px"
                    android:text="2018-06-11"
                    android:textColor="#3886C6"
                    android:textSize="32px" />

                <View
                    android:id="@+id/crown_view_end"
                    android:layout_width="188px"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="6px"
                    android:background="#DADADA" />


            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/date_start"
                android:layout_width="522px"
                android:layout_height="250px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:gravity="center"
                android:orientation="horizontal">

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_yyyy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="年"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_MM"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_dd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/date_end"
                android:layout_width="522px"
                android:layout_height="250px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50px"
                android:gravity="center"
                android:orientation="horizontal">

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_yyyy2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="年"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_MM2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

                <cn.oi.klittle.era.view.KRollerView
                    android:id="@+id/crown_roller_dd2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="#526F8F"
                    android:textSize="36px" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crown_txt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="42px"
                android:text="取消"
                android:textColor="#3886C6"
                android:textSize="32px" />

            <TextView
                android:id="@+id/crown_txt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="42px"
                android:text="完成"
                android:textColor="#3886C6"
                android:textSize="32px" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
